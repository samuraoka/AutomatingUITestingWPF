<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:employees="clr-namespace:Northwind.UI.Employees">
    <DataTemplate x:Key="EmployeeListView" DataType="employees:EmployeeListViewModel">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Left"
                    Orientation="Horizontal">
                <Button Padding="3" Content="Add"/>
                <Button Padding="3" Content="Edit"/>
                <Button Padding="3" Content="Delete"/>
            </StackPanel>

            <DataGrid IsReadOnly="True" AutoGenerateColumns="False"
                  HorizontalGridLinesBrush="DarkGray"
                  VerticalGridLinesBrush="DarkGray" x:Name="grid"
                  SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name"/>
                    <DataGridTextColumn Header="Last Name"/>
                    <DataGridTextColumn Header="Department"/>
                </DataGrid.Columns>
            </DataGrid>

        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
